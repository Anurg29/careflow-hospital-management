# ──────────────────────────────────────────────
# CareFlow Backend — Environment Variables
# NEVER commit this file to version control!
# Copy this to .env and fill in your actual values
# ──────────────────────────────────────────────

# Django
DJANGO_SECRET_KEY=your-secret-key-here-min-50-characters
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# MongoDB Atlas
MONGO_URL=your-mongodb-connection-string-here
MONGO_DB_NAME=careflow

# CORS — comma-separated allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Redis (optional — leave blank for in-memory channel layer)
REDIS_URL=

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
